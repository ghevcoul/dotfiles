[user]
        name = Gavin Heverly-Coulson
        email = <insert correct email here>

[init]
        defaultBranch = main
        
[core]
        # https://github.com/dandavison/delta
        pager = delta
	# Add a global exclude file
        # https://0xmachos.com/2020-01-22-Eradicating-.DS_Store-From-Git/
        excludesfile = ~/.gitignore

# Config for delta pager
[delta]
        line-numbers = true
        dark = true
        syntax-theme = "zenburn"
	
# Use delta specific merge conflict display
[merge]
        conflictstyle = diff3

[interactive]
        diffFilter = delta --color-only

[pull]
        rebase = false
